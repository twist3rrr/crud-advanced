{
    "extends": "airbnb",
    "rules": {
        "arrow-body-style": 0,
        "indent": ["error", 4],
        "no-shadow": 0,
        "react/jsx-indent": [2, 4],
        "react/forbid-prop-types": 0,
        "react/jsx-indent-props": [2, 4],
        "react/prefer-stateless-function": 0,
        "import/no-extraneous-dependencies": ["error", {
            "devDependencies": true
        }]
    }
}